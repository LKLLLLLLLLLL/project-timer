{
  "name": "project-timer",
  "displayName": "Project Timer",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "project-timer.delete_all_storage",
        "title": "Project Timer: Delete All Storage"
      },
      {
        "command": "project-timer.openStatistics",
        "title": "Project Timer: Open Statistics"
      },
      {
        "command": "project-timer.export_data",
        "title": "Project Timer: Export Data"
      },
      {
        "command": "project-timer.import_data",
        "title": "Project Timer: Import Data"
      }
    ],
    "configuration": {
      "title": "Project Timer",
      "properties": {
        "project-timer.statusBar.displayPrecision": {
          "type": "string",
          "enum": [
            "second",
            "minute",
            "hour",
            "auto"
          ],
          "default": "auto",
          "description": "The precision the status bar will display. `auto` will automatically choose the precision based on the time."
        },
        "project-timer.statusBar.displayStyle": {
          "type": "string",
          "enum": [
            "verbose",
            "compact"
          ],
          "default": "verbose",
          "description": "The display style on the status bar:\n- `verbose` will display timer and project.\n- `compact` will only display timer."
        },
        "project-timer.timer.pauseWhenUnfocused": {
          "type": "boolean",
          "default": true,
          "description": "Whether the timer should pause when the VSCode window is unfocused."
        },
        "project-timer.timer.idleThreshold": {
          "type": "number",
          "default": 10,
          "description": "The idle time threshold in minutes. If the user is idle for longer than this, the timer will pause.`0` will disable idle detection."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}